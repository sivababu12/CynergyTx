<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cartrow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <com.cilpl.clusters.utils.TwCenMTBold
        android:id="@+id/time_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_margin="@dimen/_2sdp"
        android:singleLine="false"
        android:text="0 - 01"
        android:padding="@dimen/_5sdp"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/empty_border"
        android:textColor="@color/black"
        android:textSize="@dimen/_11sdp" />

    <com.cilpl.clusters.utils.TwCenMTBold
        android:id="@+id/time3_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_2sdp"
        android:singleLine="false"
        android:text="0 - 01"
        android:visibility="gone"
        android:padding="@dimen/_5sdp"
        android:background="@drawable/elevaion_red"
        android:textColor="@color/white"
        android:textSize="@dimen/_11sdp" />

    <com.cilpl.clusters.utils.TwCenMTBold
        android:id="@+id/time2_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:gravity="center"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_margin="@dimen/_2sdp"
        android:singleLine="false"
        android:padding="@dimen/_5sdp"
        android:text="0 - 01"
        android:background="@drawable/elevaion_green"
        android:textColor="@color/white"
        android:textSize="@dimen/_11sdp" />

</LinearLayout>